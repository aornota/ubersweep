{
    "Authentication": {
        "// InvalidateExistingTokens": "not defined here: no need to override appsettings.json configuration",
        "TokenLifetimeInHours": 168.0
    },
    "// FilePersistence": "not defined here: no need to override appsettings.json configuration",
	"Serilog": {
        "WriteTo": {
            "0": {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj}{NewLine}",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            "1": {
                "Name": "File",
                "Args": {
                    "path": "logs/server_.log",
                    "rollingInterval": "Day",
                    "fileSizeLimitBytes": 1000000,
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:HH:mm:ss.fff zzz} {Level:u3}] {SourceContext} {Message:lj}{NewLine}",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        }
	}
}
